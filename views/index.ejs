<% include header %>

<% if(entries.length){ %>
    <h1 class="display-4" style="margin-top:3rem; text-align:center;">Lista de victimas</h1>
    <% entries.forEach((entry)=>{ %>
            <div class="card" style="width: 20rem; margin-bottom: 2rem;">
                    <ul class="list-group list-group-flush">
                      <li class="list-group-item"><b>Nombre:</b> <%- entry.nombre %></li>
                      
                      <li class="list-group-item"><b>Dirección:</b> <%- entry.direccion %></li>
                      
                      <li class="list-group-item"><b>Teléfono:</b> <%- entry.tel %></li>
                    
                      
                    </ul>
                  </div>
    <% }) %>
<% }else{ %>
    <h1 class="display-4" style="margin-top:3rem; text-align:center;">Aún no hay victimas</h1>
<% } %>

<% include footer %>